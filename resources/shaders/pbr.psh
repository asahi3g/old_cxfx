uniform sampler2D u_t2Albedo;

uniform vec4 DEBUG_0;
uniform vec4 u_v4Albedo;
uniform mat4 u_m44World;

in vec4 v_v4Albedo;
in vec3 v_v3Normal;
in vec2 v_v2Texcoord;
in vec3 v_v3Position;

out vec4 o_v4Color;

void main()
{
	vec3 light = vec3(1, 0, 1);

	float nDotL = dot((u_m44World * vec4(v_v3Normal, 1)).xyz, light);
	vec3 color = texture2D(u_t2Albedo, v_v2Texcoord).xyz;
	o_v4Color = vec4(color * (0.3 + clamp(nDotL, 0, 1) * 0.7), 1);
}

